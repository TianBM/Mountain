{{!< default}}
<!-- START: HOME -->
<section class="section-home" id="home">
	<div class="glass">
		<h3>{{@site.title}}</h3>
		<p class="post-header" id="index_djt">
			
		</p>
		</div>
	<img src="{{#if @site.cover_image}}{{@site.cover_image}}{{else}}{{asset '/images/banner.jpg'}}{{/if}}" id="full_img"  />
</section>
<!-- END: HOME -->

<!-- START: BLOG -->
<section class="section section-light">
	<div class="container">
		<div class="section-head">
			<span>{{@site.description}}</span>
			<h2>Blog</h2>
		</div>

		<div class="row">
			{{#foreach posts}}
			{{> post-card}}
			{{/foreach}}
		</div>
		<div class="container">
			{{pagination}}

		</div>
	</div>
</section>
<!-- END: BLOG -->